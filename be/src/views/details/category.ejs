<body>
    <div class="row background">
        <%- include('../components/adminNav.ejs')%>
            <div class="col-8">
                <div class="container">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <div>
                                <h3>Category</h3>
                                <%- include('../createForm/category.ejs')%>
