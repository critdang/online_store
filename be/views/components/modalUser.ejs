<% if(typeof user !='undefined' ){%>
  <button style="outline: none;border: none;background: none;" class="user-hover" class="btn btn-primary"
    data-toggle="modal" data-target="#User-form<%=user.id%>" data-whatever="@getbootstrap">
    <i id="right-click" class="fa-solid fa-angle-right"></i>
  </button>
  <div class="modal fade" id="User-form<%=user.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit User</h5>
          <button type="button" class="close-form-btn close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>

            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Name:</label>
              <input type="text" class="form-control" id="recipient-name" value="<%=user.fullname%>">
            </div>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Address:</label>
              <input type="text" class="form-control" id="recipient-name" value="<%=user.address%>">
            </div>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Avatar:</label>
              <input type="file" class="form-control" id="recipient-name" value="<%=user.avatar%>">
            </div>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Birthday:</label>
              <input type="date" class="form-control" id="recipient-name">
            </div>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Phone number:</label>
              <input type="text" class="form-control" id="recipient-name" value="<%=user.phone%>">
            </div>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Gender:</label>

              <div class="form-check">
                <input class="form-check-input" type="radio" name="gender_radio" id="gender_radio_male" value="Male"
                  <%=user.gender=='Male' ?'checked':''%> >
                <label class="form-check-label" for="gender_radio_male">
                  Male
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="gender_radio" id="gender_radio_female" value="Female"
                  <%=user.gender=='Female' ?'checked':''%>>
                <label class="form-check-label" for="gender_radio_female">
                  Female
                </label>
              </div>
            </div>
            <div class="form-group">
              <label for="recipient-name2" class="col-form-label">Active:</label>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="status_radio" id="status_radio_true" value="option1"
                  <%=user.isActive=='1' ?'checked':''%>>
                <label class="form-check-label" for="status_radio_true">
                  True
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="status_radio" id="status_radio_false" value="option2"
                  <%=user.isActive=='0' ?'checked':''%>>
                <label class="form-check-label" for="status_radio_false">
                  False
                </label>
              </div>
            </div>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Block:</label>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="block_radio" id="block_radio_true" value="option1"
                  <%=user.is_blocked=='1' ?'checked':''%>>
                <label class="form-check-label" for="block_radio_true">
                  True
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="block_radio" id="block_radio_false" value="option2"
                  <%=user.is_blocked=='0' ?'checked':''%>>
                <label class="form-check-label" for="block_radio_false">
                  False
                </label>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" onclick="changeBlockUserStt('<%=user.id%>')" class="btn btn-danger"
            style="justify-content: left;">
            <%=user.is_blocked== 0 ? 'Block' : 'Unblock' %>
          </button>
          <button type="button" onclick="deleteUser('<%=user.id%>')" class="btn btn-danger"
            style="justify-content: left;">
            Delete User
          </button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Update User</button>
        </div>
      </div>
    </div>
  </div>
  <%}%>