<button style="outline: none;border: none;background: none;" class="order-hover" class="btn btn-primary" data-toggle="modal" data-target="#Order-form<%=order.id%>">
    <i id="right-click" class="fa-solid fa-angle-right"></i>
</button>
<div class="modal fade" id="Order-form<%=order.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Order</h5>
            <button type="button" class="close-form-btn close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Payment Method:<%=order.status%></label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="payment_method" id="payment_method_visa" value="Visa" <%= order.paymentMethod == 'visa' ? 'checked': ''%>>
                        <label class="form-check-label" for="payment_method_visa">
                          Visa
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="payment_method" id="payment_method_cash" value="Cash" <%= order.paymentMethod == 'cash' ? 'checked': ''%>>
                        <label class="form-check-label" for="payment_method_cash">
                          Cash
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Payment Date:</label>
                    <input type="date" class="form-control" id="recipient-name" value="<%=order.paymentDate%>">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Status:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="order_radio" id="order_radio_completed" value="Completed" <%= order.status == 'completed' ? 'checked': ''%> >
                        <label class="form-check-label" for="order_radio_completed">
                        Completed
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="order_radio" id="order_radio_pending" value="Pending" <%= order.status == 'pending' ? 'checked': ''%>>
                        <label class="form-check-label" for="order_radio_pending">
                        Pending
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="order_radio" id="order_radio_cancel" value="Cancel" <%= order.status == 'cancel' ? 'checked': ''%>>
                        <label class="form-check-label" for="order_radio_cancel">
                        Cancel
                        </label>
                    </div>
                </div>
            </form>
        </div>
        
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" style="justify-content: left;">Delete</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Update Category</button>
        </div>

        </div>
    </div>
</div>