<% if(typeof product != 'undefined'){%>
<button style="outline: none;border: none;background: none;" class="user-hover" class="btn btn-primary" data-toggle="modal" data-target="#Product-form<%=product.id%>" data-whatever="@getbootstrap">
    <i id="right-click" class="fa-solid fa-angle-right"></i>
</button>
<div class="modal fade" id="Product-form<%=product.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit User</h5>
                <button type="button" class="close-form-btn close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
    
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Name:</label>
                    <input type="text" class="form-control" id="recipient-name" value="<%=product.name%>">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Amount:</label>
                    <input type="text" class="form-control" id="recipient-name" value="<%=product.amount%>">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Price:</label>
                    <input type="text" class="form-control" id="recipient-name" value="<%=product.price%>">

                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Category: <%=categoryProduct%></label>
                    <input type="text" class="form-control" id="recipient-name" value="">
                    
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Description:</label>
                    <input type="text" class="form-control" id="recipient-name" value="<%=product.description%>">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Image:</label>
                    <input type="file" class="form-control" id="recipient-name" value="">
                    
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" style="justify-content: left;">Delete</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Update User</button>
              </div>
            </div>
          </div>
        </div>
    <%}%>